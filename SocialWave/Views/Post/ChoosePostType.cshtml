@{
    ViewData["Title"] = "Выберите тип поста";
}

<style>
    .custom-border {
        width: 100%;
        height: 2px;
        background: linear-gradient(to right, #FFA500, #FF4500);
        margin: 40px 0;
    }

    .info-text {
        background: linear-gradient(to right, #FFA500, #FF4500);
        -webkit-background-clip: text;
        color: transparent;
        padding: 10px 20px;
        margin-bottom: 20px;
    }

    .body {
        border: 1px solid #FF4500;
        border-radius: 8px;
        padding-top: 20px;
        padding-bottom: 20px;
        padding-left: 5px;
        padding-right: 5px;
        margin-bottom: 80px;
    }
</style>


<div class="container body">
    <div class="mb-5 text-center">
        <div class="info-text"><h2 class="text-center mb-4">@ViewData["Title"]</h2></div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="btn-group" role="group">
            <a class="btn btn-outline-primary btn-lg text-dark" style="width: 500px;" asp-controller="Post" asp-action="CreatePost">
                <i class="bi bi-file-earmark-text-fill fs-1 me-2"></i><strong>Текстовый пост</strong>
            </a>
            <a class="btn btn-outline-primary btn-lg text-dark" style="width: 500px;" asp-controller="Post" asp-action="CreatePostImage">
                <i class="bi bi-file-earmark-richtext-fill fs-1 me-2"></i><strong>Пост с картинкой</strong>
            </a>
        </div>
    </div>
</div>
